{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["es2020", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"types": [
			"node",
			"vscode"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/vscode/vscode.d.ts"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
